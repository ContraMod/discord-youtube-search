{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["ES2017"],
        "module": "CommonJS",
        "sourceMap": false,
        "removeComments": true,
        "stripInternal": true,
        "noEmitOnError": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "files": [
        "./src/index.ts"
    ]
}
